[user]
	name = Samer Masterson
	email = samer@samertm.com
[merge]
	conflictstyle = diff3
        renamelimit   = 10000

[alias]
        s             = status
        st            = status
        co            = checkout
        rb            = rebase
        changes       = diff --name-status -r
        diffstat      = diff --stat -r
        cl            = clone
        shallow-clone = clone --depth=1
        scl           = clone --depth=1
        subt          = subtree
        subta         = subtree add
        a             = commit --amend --no-edit -a
        rh            = reset --hard HEAD
        pm            = push -f mac

[format]
        pretty = format:"%C(auto,yellow)commit %H%d%C(auto,reset)\nAuthor: %an <%ae>\nDate:   %cd\n\n%w(0,4,4)%B"

[log]
        date = local
[push]
	default = simple
[commit]
	template = ~/.gitmessage
