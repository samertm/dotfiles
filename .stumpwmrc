;; -*-lisp-*-

(in-package :stumpwm)

(define-key *root-map* (kbd "c")
  "exec urxvtcd +sb -fn \"xft:Ubuntu Mono\"")
(define-key *root-map* (kbd "C-c")
  "exec urxvtcd +sb -fn \"xft:Ubuntu Mono\"")
(define-key *root-map* (kbd "O") "fother")

(define-key *top-map* (kbd "s-=") "exec amixer -c 0 -q set Master 2dB+ unmute")
(define-key *top-map* (kbd "s--") "exec amixer -c 0 -q set Master 2dB- unmute")
(define-key *top-map* (kbd "s-0") "exec amixer -c 0 -q set Master 0%")
(define-key *top-map* (kbd "s-F12") "exec cmus-remote -C \"player-pause\"")
(define-key *top-map* (kbd "M-F9") "loadrc")


(if (not (head-mode-line (current-head)))
    (toggle-mode-line (current-screen) (current-head)))

(setf *screen-mode-line-format*
      (list '(:eval (stumpwm:run-shell-command "date +%a\\ %b\\ %d\\ %I:%M|tr -d [:cntrl:]" t))
            "|%g|%w"))

;;"How thick shall the mode line border be?"
(setf *mode-line-border-width* 0)

;;"Define mode line background color."
(setf *mode-line-background-color* "black")

;;"Define mode line foreground color."
(setf *mode-line-foreground-color* "lightgreen")

;;"Define mode line border color."
(setf *mode-line-border-color* "lightyellow")

(setf *mouse-focus-policy* :sloppy)

(set-focus-color "dark green")
(set-unfocus-color "grey")
(setf *normal-border-width* 2)
(setf *window-border-style* :thin)
