execute pathogen#infect()

set nocompatible

set backup
set backupdir=~/.vim/backup
set directory=~/.vim/tmp
filetype plugin on
syntax on
set title
set ruler
set ttyfast
set mouse=a
set backspace=2

set showcmd
set showmode

nnoremap j gj
nnoremap k gk

set history=500
set undolevels=500

set ignorecase
set smartcase
set gdefault
set incsearch
set showmatch

set hlsearch
if version >= 703
	set relativenumber
else
	set number
endif

set tabstop=4
set shiftwidth=4
set autoindent
set cindent
set smarttab
filetype plugin indent on
